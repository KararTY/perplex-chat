{
  "name": "perplex-chat",
  "version": "0.9.7",
  "private": true,
  "description": "Wild Chat Remake",
  "main": "dist/perplex-chat.html",
  "scripts": {
    "build": "rimraf dist && npm run css-build && parcel build src/perplex-chat.html --detailed-report",
    "start": "npm run build && npm run python3-http-server",
    "css-build": "node-sass sass/stylesheet.scss src/css/stylesheet.css --output-style compressed",
    "python3-http-server": "cd ./dist/ && python -m http.server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Karar Al-Remahy",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "parcel": "^2.0.0-beta.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/node": "^14.0.27",
    "dank-twitch-irc": "github:kararty/dank-twitch-irc",
    "node-sass": "^4.14.1",
    "uhtml": "^2.0.1"
  }
}
